{
  "name": "halloween",
  "displayName": "Kiroween",
  "description": "This is a halloween VSCode theme making for Kiroween Hackathon",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.103.0"
  },
  "categories": [
    "Themes"
  ],
  "main": "./extension.js",
  "activationEvents": [
    "onStartupFinished"
  ],
  "contributes": {
    "themes": [
      {
        "label": "KiroTheme",
        "uiTheme": "vs-dark",
        "path": "./themes/KiroTheme-color-theme.json"
      }
    ],
    "productIconThemes": [
      {
        "id": "kiroween-icons",
        "label": "Kiroween Icons",
        "path": "./themes/product-icon-theme.json"
      }
    ],
    "commands": [
      {
        "command": "kiroween.toggleBackground",
        "title": "Kiroween: Toggle Halloween Background"
      },
      {
        "command": "kiroween.showCssPath",
        "title": "Kiroween: Show Background CSS Path"
      }
    ],
    "configuration": {
      "title": "Kiroween",
      "properties": {
        "kiroween.background.enabled": {
          "type": "boolean",
          "default": true,
          "description": "Enable or disable the Halloween background pattern in the editor"
        }
      }
    }
  },
  "scripts": {
    "test": "node test-icons-pbt.js",
    "build:icons": "icon-font-generator assets/*.svg -o themes -n kiroween-icons --types ttf --height 1000 --normalize --codepoints themes/codepoints.json --json themes/icon-mapping.json"
  },
  "devDependencies": {
    "fast-check": "^3.15.0",
    "icon-font-generator": "^2.1.11"
  }
}
