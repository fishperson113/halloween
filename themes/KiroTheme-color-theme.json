// VIBRANT PALETTE
// goldenYellow:  #FFB200
// burntOrange:   #EB5B00
// hotPink:       #D91656
// deepPurple:    #640D5F
// darkPurple:    #3D0842
// veryDark:      #1A0A1F
// fogGrey:       #C6C6C6

{
	"$schema": "vscode://schemas/color-theme",
	"name": "KiroTheme",
	"type": "dark",

	"colors": {
	// Editor Background Configuration
	// The editor background uses veryDark (#1A0A1F) as the base color.
	// A Halloween-themed background pattern can be overlaid using CSS customization.
	// Background pattern asset: ../assets/background-pattern.svg
	// Recommended opacity: 0.02-0.08 for subtlety and readability
	// The pattern tiles seamlessly and uses colors from the Kiroween palette
	"editor.background": "#1A0A1F",   // veryDark
	"editor.foreground": "#C6C6C6",   // fogGrey

	// Side Bar
	"sideBar.background": "#3D0842",          // darkPurple
	"sideBar.foreground": "#C6C6C6",
	"sideBar.border": "#3D0842",

	// Activity Bar
	"activityBar.background": "#EB5B00",      // burntOrange
	"activityBar.foreground": "#FFB200",      // goldenYellow (icon glow)
	"activityBar.activeBorder": "#FFB200",    // goldenYellow
	"activityBar.inactiveForeground": "#FFFFFF",

	// Status Bar
	"statusBar.background": "#EB5B00",        // burntOrange
	"statusBar.foreground": "#FFFFFF",
	"statusBar.border": "#FFB200",

	// Tabs
	"tab.activeBackground": "#1A0A1F",        // veryDark
	"tab.inactiveBackground": "#0D0510",
	"tab.activeBorderTop": "#FFB200",         // goldenYellow
	"tab.inactiveForeground": "#C6C6C6",

	// Panel / Terminal
	"panel.background": "#1A0A1F",
	"terminal.background": "#1A0A1F",
	"panel.border": "#EB5B00",

	// Editor Highlights
	"editorLineNumber.foreground": "#EB5B00",
	"editorCursor.foreground": "#FFB200",
	"editor.selectionBackground": "#D9165644",   // hotPink (transparent)
	"editor.selectionHighlightBackground": "#D9165622",
	"editor.lineHighlightBackground": "#EB5B0022",

	// Scrollbars
	"scrollbarSlider.background": "#EB5B0066",
	"scrollbarSlider.hoverBackground": "#EB5B0088",
	"scrollbarSlider.activeBackground": "#FFB200AA",

	// Badges (hover info, etc.)
	"badge.background": "#FFB200",
	"badge.foreground": "#1A0A1F"
	},


	"tokenColors": [
		{
			"name": "Comments",
			"scope": [
				"comment",
				"punctuation.definition.comment"
			],
			"settings": {
				"foreground": "#C6C6C6",
				"fontStyle": "italic"
			}
		},
		{
			"name": "Strings",
			"scope": [
				"string",
				"string.quoted",
				"string.template"
			],
			"settings": {
				"foreground": "#D91656"
			}
		},
		{
			"name": "Template Expressions",
			"scope": [
				"meta.template.expression",
				"punctuation.definition.template-expression"
			],
			"settings": {
				"foreground": "#EB5B00"
			}
		},
		{
			"name": "Keywords",
			"scope": [
				"keyword",
				"storage.type",
				"storage.modifier"
			],
			"settings": {
				"foreground": "#EB5B00"
			}
		},
		{
			"name": "Control Keywords",
			"scope": [
				"keyword.control",
				"keyword.operator.new",
				"keyword.operator.expression"
			],
			"settings": {
				"foreground": "#EB5B00",
				"fontStyle": "bold"
			}
		},
		{
			"name": "Variables",
			"scope": [
				"variable",
				"variable.other",
				"variable.parameter"
			],
			"settings": {
				"foreground": "#C6C6C6"
			}
		},
		{
			"name": "Function Names",
			"scope": [
				"entity.name.function",
				"support.function",
				"meta.function-call"
			],
			"settings": {
				"foreground": "#FFB200"
			}
		},
		{
			"name": "Types & Classes",
			"scope": [
				"entity.name.type",
				"entity.name.class",
				"support.type",
				"support.class"
			],
			"settings": {
				"foreground": "#FFB200",
				"fontStyle": "bold"
			}
		},
		{
			"name": "Numbers & Constants",
			"scope": [
				"constant.numeric",
				"constant.language",
				"constant.character"
			],
			"settings": {
				"foreground": "#EB5B00"
			}
		},
		{
			"name": "Operators",
			"scope": [
				"keyword.operator",
				"punctuation.separator",
				"punctuation.terminator"
			],
			"settings": {
				"foreground": "#C6C6C6"
			}
		},
		{
			"name": "RegExp",
			"scope": [
				"string.regexp",
				"constant.character.escape"
			],
			"settings": {
				"foreground": "#EB5B00"
			}
		},
		{
			"name": "Errors & Invalid",
			"scope": [
				"invalid",
				"invalid.illegal",
				"invalid.deprecated"
			],
			"settings": {
				"foreground": "#D91656",
				"fontStyle": "bold underline"
			}
		},
		{
			"name": "JSON Property Names",
			"scope": [
				"support.type.property-name"
			],
			"settings": {
				"foreground": "#FFB200"
			}
		},
		{
			"name": "Markup Headings",
			"scope": [
				"markup.heading",
				"entity.name.section"
			],
			"settings": {
				"foreground": "#EB5B00",
				"fontStyle": "bold"
			}
		},
		{
			"name": "Markup Bold",
			"scope": [
				"markup.bold"
			],
			"settings": {
				"foreground": "#EB5B00",
				"fontStyle": "bold"
			}
		},
		{
			"name": "Markup Italic",
			"scope": [
				"markup.italic"
			],
			"settings": {
				"foreground": "#D91656",
				"fontStyle": "italic"
			}
		},
		{
			"name": "Markup Links",
			"scope": [
				"markup.underline.link",
				"string.other.link"
			],
			"settings": {
				"foreground": "#FFB200",
				"fontStyle": "underline"
			}
		}
	]
}
