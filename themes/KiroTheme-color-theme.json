// HALLOWEEN PALETTE
// pumpkinOrange: #FF7A18
// witchPurple:   #6A0D83
// toxicGreen:    #4EF17B
// bloodRed:      #FF2E4C
// fogGrey:       #C6C6C6
// midnightBlack: #0B0B0F
// voidNavy:      #1A1A29
// hauntedBlue:   #3849FF

{
	"$schema": "vscode://schemas/color-theme",
	"name": "KiroTheme",
	"type": "dark",

	"colors": {
	"editor.background": "#0B0B0F",   // midnightBlack
	"editor.foreground": "#C6C6C6",   // fogGrey

	// Side Bar
	"sideBar.background": "#6A0D83",          // witchPurple
	"sideBar.foreground": "#C6C6C6",
	"sideBar.border": "#6A0D83",

	// Activity Bar
	"activityBar.background": "#4A0560",      // darker witchPurple
	"activityBar.foreground": "#FF7A18",      // pumpkinOrange (icon glow)
	"activityBar.activeBorder": "#FF2E4C",    // bloodRed
	"activityBar.inactiveForeground": "#C6C6C6",

	// Status Bar
	"statusBar.background": "#FF7A18",        // pumpkinOrange
	"statusBar.foreground": "#0B0B0F",
	"statusBar.border": "#FF2E4C",

	// Tabs
	"tab.activeBackground": "#1A1A29",        // voidNavy
	"tab.inactiveBackground": "#0B0B0F",
	"tab.activeBorderTop": "#FF2E4C",         // bloodRed
	"tab.inactiveForeground": "#C6C6C6",

	// Panel / Terminal
	"panel.background": "#1A1A29",
	"terminal.background": "#1A1A29",
	"panel.border": "#6A0D83",

	// Editor Highlights
	"editorLineNumber.foreground": "#6A0D83",
	"editorCursor.foreground": "#FF7A18",
	"editor.selectionBackground": "#4EF17B44",   // toxicGreen (transparent)
	"editor.selectionHighlightBackground": "#4EF17B22",
	"editor.lineHighlightBackground": "#6A0D8311",

	// Scrollbars
	"scrollbarSlider.background": "#6A0D8366",
	"scrollbarSlider.hoverBackground": "#6A0D8388",
	"scrollbarSlider.activeBackground": "#FF7A18AA",

	// Badges (hover info, etc.)
	"badge.background": "#FF2E4C",
	"badge.foreground": "#FFFFFF"
	},


	"tokenColors": [
		{
			"name": "Comments",
			"scope": [
				"comment",
				"punctuation.definition.comment"
			],
			"settings": {
				"foreground": "#C6C6C6",
				"fontStyle": "italic"
			}
		},
		{
			"name": "Strings",
			"scope": [
				"string",
				"string.quoted",
				"string.template"
			],
			"settings": {
				"foreground": "#4EF17B"
			}
		},
		{
			"name": "Template Expressions",
			"scope": [
				"meta.template.expression",
				"punctuation.definition.template-expression"
			],
			"settings": {
				"foreground": "#FF7A18"
			}
		},
		{
			"name": "Keywords",
			"scope": [
				"keyword",
				"storage.type",
				"storage.modifier"
			],
			"settings": {
				"foreground": "#FF7A18"
			}
		},
		{
			"name": "Control Keywords",
			"scope": [
				"keyword.control",
				"keyword.operator.new",
				"keyword.operator.expression"
			],
			"settings": {
				"foreground": "#FF7A18",
				"fontStyle": "bold"
			}
		},
		{
			"name": "Variables",
			"scope": [
				"variable",
				"variable.other",
				"variable.parameter"
			],
			"settings": {
				"foreground": "#C6C6C6"
			}
		},
		{
			"name": "Function Names",
			"scope": [
				"entity.name.function",
				"support.function",
				"meta.function-call"
			],
			"settings": {
				"foreground": "#3849FF"
			}
		},
		{
			"name": "Types & Classes",
			"scope": [
				"entity.name.type",
				"entity.name.class",
				"support.type",
				"support.class"
			],
			"settings": {
				"foreground": "#3849FF",
				"fontStyle": "bold"
			}
		},
		{
			"name": "Numbers & Constants",
			"scope": [
				"constant.numeric",
				"constant.language",
				"constant.character"
			],
			"settings": {
				"foreground": "#FF7A18"
			}
		},
		{
			"name": "Operators",
			"scope": [
				"keyword.operator",
				"punctuation.separator",
				"punctuation.terminator"
			],
			"settings": {
				"foreground": "#C6C6C6"
			}
		},
		{
			"name": "RegExp",
			"scope": [
				"string.regexp",
				"constant.character.escape"
			],
			"settings": {
				"foreground": "#FF7A18"
			}
		},
		{
			"name": "Errors & Invalid",
			"scope": [
				"invalid",
				"invalid.illegal",
				"invalid.deprecated"
			],
			"settings": {
				"foreground": "#FF2E4C",
				"fontStyle": "bold underline"
			}
		},
		{
			"name": "JSON Property Names",
			"scope": [
				"support.type.property-name"
			],
			"settings": {
				"foreground": "#3849FF"
			}
		},
		{
			"name": "Markup Headings",
			"scope": [
				"markup.heading",
				"entity.name.section"
			],
			"settings": {
				"foreground": "#FF7A18",
				"fontStyle": "bold"
			}
		},
		{
			"name": "Markup Bold",
			"scope": [
				"markup.bold"
			],
			"settings": {
				"foreground": "#FF7A18",
				"fontStyle": "bold"
			}
		},
		{
			"name": "Markup Italic",
			"scope": [
				"markup.italic"
			],
			"settings": {
				"foreground": "#4EF17B",
				"fontStyle": "italic"
			}
		},
		{
			"name": "Markup Links",
			"scope": [
				"markup.underline.link",
				"string.other.link"
			],
			"settings": {
				"foreground": "#3849FF",
				"fontStyle": "underline"
			}
		}
	]
}
